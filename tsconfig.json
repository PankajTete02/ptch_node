{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*",
              "common/**/*", // Include all files in the common folder
              "config/**/*"],
  "exclude": ["node_modules"]
}
